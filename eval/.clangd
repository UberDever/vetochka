CompileFlags:
  Add: 
    - -std=c99
    - -x
    - c
    - -Wall
    - -Werror
    - -Wextra
    - -Wno-unused-function
  Compiler: clang
Diagnostics:
  ClangTidy:
    Add: 
      - readability-*
      - clang-analyzer-*
    Remove: 
      - modernize-*
      - cppcoreguidelines-*
      - readability-identifier-length
      - readability-function-cognitive-complexity
      - readability-magic-numbers
Index:
  Background: Build


